name = test_animation;

rootDir.texture = "../Texture";
rootDir.audio = "../Audio";

spriteSheet = "victor1_armoured_front_walk.png"
atlasDim = 192, 64
audio = 2; //number of tracks
afile = 0; test.mp3 //audio file
afile = 1; test1.mp3

//rows and frames start count from 0

rows = 4;
rowHeight = 64;
frameWidth = 32;
sameFrameCount = 6; //or differingFrameCount, don't need specifications for each frame in this case
sameFrameTime = 0.25; //or differingFrameTime, don't need specifications for each frame in this case
sameAudio = 1; //or differingAudio, don't need specifications for each frame in this case
 
row = 0; //normal
frameTime = 0.25;
track = 0; //audio track
close();

row = 1; //differing times (1 frame)
frameTime = 0.25;
